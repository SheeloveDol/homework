<%- include('../partials/header') %> 
<main class="container">
  <form action="/cohorts/<%= cohort.id %> " method="POST"  >
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= cohort.name %> </h3>
      <%= cohort.members %> 
    </div>
  </div>
    <div class="card">
      <div class="card-body">
        <h6 class="cart-title">Method</h6>
        
        <div class="form-check">
          <input class="form-check-input" type="radio" name="choice" id="team_count" value="team_count" >
          <label class="form-check-label" for="team_count">Team Count</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="choice" id="number_per_team" value="number_per_team" >
          <label class="form-check-label" for="number_per_team">Number Per Team</label>
        </div>

        <br>

        <div>
          <form>
            <div class="form-group">
              <label for="quantity">Quantity</label>
              <input type="text" class="form-control" id="quantity" name="quantity" >
            </div>
        </div>
        <div>
          <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Assign Teams</button>
        </div>
      </div>
    </div>
  </form>


  <form action="<%= cohort.id %>/edit " >
    <div class="card">
      <div class="card-body">
        <input type="submit" class="btn btn-outline-warning btn-lg btn-block" value="Edit">
      </div>
    </div> 
  </form>

  <form action="/cohorts/<%= cohort.id %> " method="POST">
    <div class="card">
      <div class="card-body">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-outline-danger btn-lg btn-block" value="Delete">
      </div>
    </div>
  </form>
 
  <% if (team_count) { %> 
    <h1><%= team_count %> </h1>
<% } %> 
</main>
<%- include('../partials/footer') %> 

