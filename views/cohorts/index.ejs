<%- include('../partials/header') %> 

<main class="container">
  <% for (let cohort of cohorts) { %> 
    <div class="card mb-4" style="width: 100%;">
      
      <div class="card-body">
        <img class="rounded-circle float-left" width="50px" height="50px" src="<%= cohort.logo_url %>" alt="" data-holder-rendered="">
        <h3 class="card-title"><%= cohort.name %></h3>
        <p class="card-body"><%= cohort.members %> </p>
        <a href="/cohorts/<%= cohort.id %> " class="btn btn-primary">Show Cohort</a> <!-- fixed link for button-->
      </div>
    </div>
  <% } %>   
</main>

<%- include('../partials/footer') %> 